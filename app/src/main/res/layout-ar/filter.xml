<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_filter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal"
        android:weightSum="4">

        <com.groomer.customviews.CustomTextViewMarkNovaRegular
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/lbl_search"
            android:textSize="@dimen/textsize_17sp" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.groomer.customviews.CustomEditTextMarkNovaRegular
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/filterTextView"
                android:textSize="@dimen/textsize_17sp" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal"
        android:weightSum="4">

        <com.groomer.customviews.CustomTextViewMarkNovaRegular
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/lbl_category"
            android:textSize="@dimen/textsize_17sp" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.groomer.customviews.CustomTextViewMarkNovaRegular
                android:id="@+id/txt_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/filterTextView"
                android:textSize="@dimen/textsize_17sp" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <com.groomer.customviews.CustomTextViewMarkNovaRegular
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/lbl_review"
            android:textSize="@dimen/textsize_17sp" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_review_asc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/filterRightButton"
                android:minHeight="0dp"
                android:text="@string/txt_low_to_high"
                android:textAllCaps="false"
                android:textColor="?attr/filterTextColor" />

            <Button
                android:id="@+id/btn_review_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/filterLeftButton"
                android:minHeight="0dp"
                android:text="@string/txt_high_to_low"
                android:textAllCaps="false"
                android:textColor="?attr/filterTextColor" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <com.groomer.customviews.CustomTextViewMarkNovaRegular
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/lbl_rating"
            android:textSize="@dimen/textsize_17sp" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:weightSum="2"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_rating_asc"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/filterRightButton"
                android:minHeight="0dp"
                android:text="@string/txt_low_to_high"
                android:textAllCaps="false"
                android:textColor="?attr/filterTextColor" />

            <Button
                android:id="@+id/btn_rating_desc"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="?attr/filterLeftButton"
                android:minHeight="0dp"
                android:text="@string/txt_high_to_low"
                android:textAllCaps="false"
                android:textColor="?attr/filterTextColor" />
        </LinearLayout>
    </LinearLayout>


    <!-- kilometer seekbar layout -->
    <LinearLayout
        android:id="@+id/km_seekbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:orientation="horizontal">

        <!-- within text -->
        <com.groomer.customviews.CustomTextViewMarkNovaRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/lbl_distance"
            android:textSize="@dimen/textsize_17sp" />

        <!-- selected kilometers text -->
        <com.groomer.customviews.CustomTextViewMarkNovaRegular
            android:id="@+id/txt_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_5"
            android:text="5 KM"
            android:textColor="@color/black" />

        <!-- seekbar to select kilometers -->
        <SeekBar
            android:id="@+id/seekbar_km"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:max="100"
            android:maxHeight="@dimen/margin_1"
            android:minHeight="@dimen/margin_1"
            android:progressDrawable="?attr/drawerBg"
            android:splitTrack="false"
            android:thumb="@drawable/green_dragger" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal"
        android:weightSum="2">


        <Button
            android:id="@+id/btn_apply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/margin_15"
            android:text="@string/lbl_apply"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />


        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/grey"
            android:gravity="center"
            android:padding="@dimen/margin_15"
            android:text="@string/lbl_cancel"
            android:textAllCaps="false"
            android:textColor="?attr/drawerBg"
            android:textSize="15sp" />


    </LinearLayout>


</LinearLayout>