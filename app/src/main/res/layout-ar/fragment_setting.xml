<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.groomer.settings.SettingFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_save">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <include
                    layout="@layout/circuler_image_view"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_5" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/edit_btn" />
            </RelativeLayout>


            <com.groomer.customviews.CustomTextViewMarkNovaRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/txt_name"
                android:textSize="20sp" />

            <com.groomer.customviews.CustomEditTextMarkNovaRegular
                android:id="@+id/et_name"
                style="@style/et_login_style"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:hint="@string/hint_enter_here" />


            <com.groomer.customviews.CustomTextViewMarkNovaRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/txt_email"
                android:textSize="20sp" />

            <com.groomer.customviews.CustomEditTextMarkNovaRegular
                android:id="@+id/et_emailid"
                style="@style/et_login_style"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:hint="@string/hint_email" />


            <com.groomer.customviews.CustomTextViewMarkNovaRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/txt_mobile_no"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.3">

                <com.groomer.customviews.CustomTextViewMarkNovaRegular
                    android:id="@+id/txt_country_code"
                    style="@style/et_login_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight=".3"
                    android:drawableRight="@drawable/down_green"
                    android:hint="@string/txt_select_country_code" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15" />

                <com.groomer.customviews.CustomEditTextMarkNovaRegular
                    android:id="@+id/et_mobile_no"
                    style="@style/et_login_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight=".8"
                    android:hint="@string/hint_enter_here"
                    android:inputType="phone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2.3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.groomer.customviews.CustomTextViewMarkNovaRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:text="@string/txt_dob"
                        android:textSize="20sp" />

                    <com.groomer.customviews.CustomTextViewMarkNovaRegular
                        android:id="@+id/edt_dob"
                        style="@style/et_login_style"
                        android:layout_marginTop="5dp"
                        android:gravity="right"
                        android:hint="@string/txt_hint_dob" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.groomer.customviews.CustomTextViewMarkNovaRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:text="@string/txt_gender"
                        android:textSize="20sp" />

                    <com.groomer.customviews.CustomTextViewMarkNovaRegular
                        android:id="@+id/edt_gender"
                        style="@style/et_login_style"
                        android:gravity="right"
                        android:layout_marginTop="5dp"
                        android:hint="@string/txt_gender" />
                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal">


                <com.groomer.customviews.CustomTextViewMarkNovaRegular
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:text="@string/txt_location"
                    android:textSize="20sp" />

                <Switch
                    android:id="@+id/swh_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true" />


            </RelativeLayout>

            <com.groomer.customviews.CustomTextViewMarkNovaRegular
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/margin_20"
                android:text="@string/txt_change_language"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.groomer.customviews.CustomButtonMarkNovaRegular
                    android:id="@+id/btn_select_english"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:background="?attr/drawerBg"
                    android:gravity="center"
                    android:text="@string/txt_english"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />


                <com.groomer.customviews.CustomButtonMarkNovaRegular
                    android:id="@+id/btn_select_arabic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@color/grid_color"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/txt_arabic"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>


            <com.groomer.customviews.CustomTextViewMarkNovaRegular
                android:id="@+id/txt_theme"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/txt_theme"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view_green"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/green" />

                <View
                    android:id="@+id/view_blue"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorBlue" />

                <View
                    android:id="@+id/view_red"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/red" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- confirm appointment button -->
    <com.groomer.customviews.CustomButtonMarkNovaRegular
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_5"
        android:padding="@dimen/margin_15"
        android:text="@string/btn_text_save" />
</RelativeLayout>
